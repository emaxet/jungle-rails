
<div class="row">

    <h1 style="text-align: center; margin-bottom: 40px">Welcome To The Jungle</h1>

    <div class="col-sm-6 col-sm-offset-3">
    <%= form_for :user, url: '/users' do |form| %>

      <div class="form-group">
          <%= form.label 'First Name' %>
          <%= form.text_field :first_name, class: 'form-control' %>
      </div>

      <div class="form-group">
          <%= form.label 'Last Name' %>
          <%= form.text_field :last_name, class: 'form-control' %>
      </div>

      <div class="form-group">
          <%= form.label 'Email' %>
          <%= form.text_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
          <%= form.label 'Password' %>
          <%= form.text_field :password, class: 'form-control' %>
      </div>

      <div class="form-group">
          <%= form.label 'Password Confirmation' %>
          <%= form.text_field :password_confirmation, class: 'form-control' %>
      </div>

      <%= form.submit 'Register', class: 'btn btn-primary' %>

<% end %>
</div>