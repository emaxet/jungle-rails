<!DOCTYPE html>
<html>
  <head>
    <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
  </head>
  <body>
    <h1>Thank you for your purchase!</h1>

    <div class="panel panel-default items">
    <h2>Order Details</h2>
    <p>Customer Email: <%= @order.email %></p>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% cart_total = 0 %>
        <% @order.line_items.each do |item| %>
        <% cart_total += @products.find_by(id: item.product_id).price * item.quantity %>
          <tr>
            <td>
              <%= image_tag @products.find_by(id: item.product_id).image.tiny %>
            </td>
            <td>
              <h4><%= @products.find_by(id: item.product_id).name %></h4>
              <br>
              <p><%= @products.find_by(id: item.product_id).description %></p>
            </td>
            <td>
              <%= @products.find_by(id: item.product_id).price %>
            </td>
            <td>
              <%= item.quantity %>
            </td>
            <td>
              <%= item.quantity * @products.find_by(id: item.product_id).price %>
            </td>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= cart_total %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

  </body>
</html>